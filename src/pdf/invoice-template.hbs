<!DOCTYPE html>
<html>
  <head>
    <style>
      body { font-family: 'Arial'; font-size: 12px; padding: 40px; }
      h1, h2, h3 { color: #001e38; }
      .header, .footer { text-align: center; margin-bottom: 20px; }
      .info, .terms { margin-top: 30px; }
      table { width: 100%; border-collapse: collapse; margin-top: 20px; }
      th, td { border: 1px solid #ccc; padding: 8px; text-align: right; }
      th:first-child, td:first-child { text-align: center; }
      th:nth-child(2), td:nth-child(2) { text-align: left; }
    </style>
  </head>
  <body>
    <div class="header">
      <h1>{{settings.businessName}}</h1>
      <p>{{settings.address}}</p>
      <p>Phone: {{settings.phone}} | GSTIN: {{settings.gstin}}</p>
    </div>

    <h2 style="text-align: center;">Invoice Receipt</h2>
    <p><strong>Receipt No:</strong> {{invoice.receiptNumber}}</p>
    <p><strong>Date:</strong> {{invoice.date}}</p>
    {{#if invoice.deliveryDate}}
      <p><strong>Delivery Date:</strong> {{invoice.deliveryDate}}</p>
    {{/if}}

    <div class="info">
      <h3>Customer Details</h3>
      <p>Name: {{invoice.customer.name}}</p>
      <p>Email: {{invoice.customer.email}}</p>
      <p>Phone: {{invoice.customer.phone}}</p>
    </div>

    <table>
      <thead>
        <tr>
          <th>No.</th>
          <th>Product</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Tax %</th>
          <th>Tax Amt</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        {{#each invoice.items}}
        <tr>
          <td>{{@index}}</td>
          <td>{{product.name}}</td>
          <td>{{quantity}}</td>
          <td>₹{{price}}</td>
          <td>{{taxRate}}</td>
          <td>₹{{taxAmount}}</td>
          <td>₹{{totalPrice}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <div class="info">
      <p><strong>CGST:</strong> ₹{{invoice.cgst}}</p>
      <p><strong>SGST:</strong> ₹{{invoice.sgst}}</p>
      <p><strong>Total Tax:</strong> ₹{{invoice.totalTax}}</p>
      <h3>Grand Total: ₹{{invoice.totalPrice}}</h3>
      <p><strong>Amount in words:</strong> {{invoice.amountInWords}} rupees only</p>
    </div>

    {{#if settings.terms}}
    <div class="terms">
      <h4>Terms & Conditions</h4>
      <p>{{settings.terms}}</p>
    </div>
    {{/if}}

    <div class="footer">
      <p>Thank you for your business!</p>
    </div>
  </body>
</html>
